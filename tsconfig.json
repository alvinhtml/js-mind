{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"removeComments": true,
		"declaration": true,
		"sourceMap": false,
		"jsx": "react",
		"lib": ["dom", "es2016", "es2017.object", "es2019"],
		"typeRoots": ["node_modules/@types"],
		"skipLibCheck": true,
		"downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*":["./app/*"]
    }
	},
	"include": ["app/**/*.ts", "app/**/*.tsx"],
	"exclude": ["node_modules"]
}
